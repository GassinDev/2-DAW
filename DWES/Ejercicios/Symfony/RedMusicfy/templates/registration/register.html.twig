{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/styles.css') }}">
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-center">
		<div class="custom-container mt-5">
			<h1 class="h3 mb-3 font-weight-normal">Registro</h1>

			{{ form_errors(registrationForm) }}

			<form method="post">
				{{ form_start(registrationForm) }}
				<div class="mb-3">
					{{ form_row(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="mb-3">
					{{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="mb-3">
					{{ form_row(registrationForm.plainPassword, {'label': 'Password', 'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="mb-3">
					{{ form_row(registrationForm.fotoPerfil)}}
				</div>
				<div class="form-check mb-3">
					{{ form_row(registrationForm.agreeTerms, {'label_attr': {'class': 'form-check-label'}}) }}
				</div>
				<button class="btn btn-lg btn-primary btn-block" type="submit">Registrarme</button>
				{{ form_end(registrationForm) }}
			</form>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
