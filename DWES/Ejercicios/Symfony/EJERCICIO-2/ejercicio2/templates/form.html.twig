{% extends 'base.html.twig' %}

{% block title %}Buscar producto{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-5">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">Crear Producto</h1>
                    {{ form_start(form) }}
                    {{ form_row(form.nombre, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Nombre'}}) }}
                    {{ form_row(form.descripcion, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Descripci√≥n'}}) }}
					{{ form_row(form.precio, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Precio'}}) }}
                    <div class="d-grid gap-2">
                        {{ form_row(form.save, {'attr': {'class': 'form-control mb-3 bg-primary text-white', 'placeholder': 'Precio'}}) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
